{% set currentRoute = app.request.attributes.get('_route') %}
 <header>
    <nav class="navbar navbar-expand-md bg-dark border-bottom border-body fixed-top" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home_homepage') }}">That all you got?</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">That all you got?</h5>

                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav me-auto mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle {{ currentRoute in ['app_card_setoverviewpage', 'app_card_classoverviewpage'] ? 'active' : '' }}" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            My collection
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('app_card_setoverviewpage') }}">Manage by set</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_card_classoverviewpage') }}">Manage by class</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ currentRoute == 'app_collection_managepromocollection' ? 'active' : '' }}" href="{{ path('app_collection_managepromocollection') }}">Promo collection</a>
                    </li>
                
                    <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true">Trade binder</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Signed in as: {{ app.user.username }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-lg-end">
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
                        </ul>
                    </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link {{ currentRoute == 'app_login' ? 'active' : '' }}" aria-current="page" href="{{ path('app_login') }}">Sign in</a>
                        </li>   
                         <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{ path('app_register') }}">Sign up</a>
                        </li> 
                    {% endif %}
                    
                </ul>
                </div>
            </div>
        </div>
    </nav>
</header>